@model FlightBookingApp.Models.Users

@{
    ViewData["Title"] = "Hồ sơ người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Hồ sơ người dùng</h2>

    <!-- Hiển thị thông báo -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Thông tin cá nhân</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="d-flex align-items-center">
                        <label class="fw-bold me-2" style="min-width: 120px;">Email:</label>
                        <span>@Model.Email</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="d-flex align-items-center">
                        <label class="fw-bold me-2" style="min-width: 120px;">Họ và tên:</label>
                        <span>@Model.FullName</span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="d-flex align-items-center">
                        <label class="fw-bold me-2" style="min-width: 120px;">Số điện thoại:</label>
                        <span>@(Model.PhoneNumber ?? "Chưa cung cấp")</span>
                    </div>
                </div>
            </div>
           
            <div class="text-center mt-4">
                <a asp-action="EditProfile" class="btn btn-primary btn-lg">Cập nhật</a>
            </div>
        </div>
    </div>
</div>

<!-- Thêm Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    .card {
        border-radius: 10px;
        border: none;
    }

    .card-header {
        background-color: #007bff;
        color: white;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .card-body {
        background-color: #f8f9fa;
        padding: 2rem;
    }

    .fw-bold {
        color: #343a40;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .alert {
        border-radius: 8px;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
    }

    .password-field {
        max-width: 300px; /* Giới hạn chiều rộng để tránh tràn */
    }

    .password-hidden {
        filter: blur(4px); /* Làm mờ mật khẩu khi ẩn */
    }

    .text-muted {
        font-size: 0.9rem;
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const togglePassword = document.querySelector('.toggle-password');
            const passwordField = document.querySelector('#password');

            // Ẩn mật khẩu mặc định
            passwordField.classList.add('password-hidden');

            togglePassword.addEventListener('click', function () {
                // Chuyển đổi giữa hiển thị và ẩn mật khẩu
                if (passwordField.classList.contains('password-hidden')) {
                    passwordField.classList.remove('password-hidden');
                    togglePassword.classList.remove('bi-eye-slash');
                    togglePassword.classList.add('bi-eye');
                } else {
                    passwordField.classList.add('password-hidden');
                    togglePassword.classList.remove('bi-eye');
                    togglePassword.classList.add('bi-eye-slash');
                }
            });
        });
    </script>
}